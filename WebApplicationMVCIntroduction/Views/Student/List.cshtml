@using WebApplicationMVCIntroduction.Models;

@{
    ViewBag.Title = "List";
}

@{ int listNumber = 0;}
<h2>All Students</h2>
<br />

<table class="table table-hover">
    <tr>
        <th>List Number</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Birth Date</th>
        <th>Task 1</th>
        <th>Task 2</th>
    </tr>

    @foreach (Student item in Model)
    {
        <tr>
            <td>@(++listNumber)</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.BirthDate.ToString("dd.MM.yyyy")</td>
            <td>
                <a href="Update/@item.Id" class="btn btn-warning">Update</a>
            </td>
            <td><a href="Delete/@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }

</table>

<br />

<a href="/Student/Add" class="btn btn-success">Add New Students</a>